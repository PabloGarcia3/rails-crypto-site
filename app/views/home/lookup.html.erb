<h3>Cryptocurrency Search</h3>

<%= form_tag home_lookup_path, :method => 'POST' do %>
    <%= text_field_tag 'sym', nil, placeholder: 'Enter Cryptocurrency Symbol', size: 50  %>
    <%= submit_tag 'Lookup Coin Quote' %>
<% end %>

<br/><br/>

<%= @symbol %>

<% if @symbol %>
    <% for x in @lookup_coin %>
        <% if @symbol == x["symbol"] %>
            <%= x["name"] %>: $<%= x["price_usd"] %><br/>
            Rank: <%= x["rank"] %><br/><br/>
        <% end %>
    <% end %>
<% end %>
